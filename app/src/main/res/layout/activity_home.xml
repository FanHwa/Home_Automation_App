<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:background="@drawable/gradient_background"
    tools:context=".Activities.HomeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_bold"
        android:padding="8dp"
        android:text="Devices"
        android:textAlignment="gravity"
        android:textColor="@color/primary"
        android:textSize="25sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_device_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/button_round"
        android:drawableLeft="@drawable/ic_baseline_add_circle_24"
        android:fontFamily="@font/open_sans_bold"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text=" Add Device"
        android:textColor="@color/white" />

<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:layout_below="@id/add_device_btn"/>-->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/show_all_devices_btn"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/add_device_btn"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/card_curved_border"
        android:backgroundTintMode="src_in"
        android:fontFamily="@font/open_sans_regular"
        android:padding="20dp"
        android:text="All Devices"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_room_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/show_all_devices_btn"
        android:layout_alignParentEnd="true"
        android:background="@drawable/button_round"
        android:drawableLeft="@drawable/ic_baseline_add_circle_24"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text=" Add Room"
        android:visibility="gone"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/home_room_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/show_all_devices_btn"
        android:fontFamily="@font/open_sans_bold"
        android:padding="8dp"
        android:text="Rooms"
        android:textAlignment="gravity"
        android:textColor="@color/primary"
        android:textSize="25sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/room_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_room_title"
        android:layout_marginTop="16dp"
        android:paddingBottom="16dp"/>


</RelativeLayout>